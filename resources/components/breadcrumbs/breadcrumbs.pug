mixin breadcrumbs(current, last, lastLink)
  ul.breadcrumb(itemscope, itemtype="http://schema.org/BreadcrumbList")
    li(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
      a.breadcrumb__link(href!="/", itemprop="item")
        span(itemprop="name") Кафе «Лапша и Суши»
        <meta itemprop="position" content="1" />
    if last
      li(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
        a.breadcrumb__link(href!='/catalog/' + lastLink, itemprop="item")
          span(itemprop="name") !{last}
          <meta itemprop="position" content="2" />
      li !{current}
    else
      li #{current}

